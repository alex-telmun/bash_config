# Bash Aliases

# Display work directory content
alias la='command -p ls --color=always --group-directories-first -AlF'
alias li='command -p ls --color=always --group-directories-first -AlFi'
alias ls='command -p ls --color=always --group-directories-first -F'

alias ..='cd ../'
alias ...='cd ../../'
alias ....='cd ../../../'

alias dus='du -h --max-depth=1 | sort -rh'
alias ssh-key-copy='ssh-copy-id -i .ssh/id_rsa.pub'
alias wtf='apropos'
alias tt='tail -f -n 25'
alias out='pastebinit -b paste.debian.net -f bash | xclip'

# Only for Arch Linux
alias yu='yaourt -Syua'

# vi:syntax=sh
# vi:ft=sh
